##############################
#### FLUID STYLED CONTENT ####
##############################
styles {
    templates {
        layoutRootPath = EXT:crio_blog/Resources/Private/Layouts/ContentElements/
        partialRootPath = EXT:crio_blog/Resources/Private/Partials/ContentElements/
        templateRootPath = EXT:crio_blog/Resources/Private/Templates/ContentElements/
    }
}

############
### PAGE ###
############
page {
     fluidtemplate {
        layoutRootPath = EXT:crio_blog/Resources/Private/Layouts/Page/
        partialRootPath = EXT:crio_blog/Resources/Private/Partials/Page/
        templateRootPath = EXT:crio_blog/Resources/Private/Templates/Page/
    }
    meta {
        description =
        author =
        keywords =
        viewport = width=device-width, initial-scale=1
        robots = noindex,nofollow
        apple-mobile-web-app-capable = no
        compatible = IE=edge
    }
    tracking {
        google {
            trackingID =
            anonymizeIp = 1
        }
    }
}

plugin {
    tx_news {
        settings.cssFile >
        view {
            templateRootPath = EXT:crio_blog/Resources/Private/Extensions/news/Templates/
            partialRootPath = EXT:crio_blog/Resources/Private/Extensions/news/Partials/
            layoutRootPath = EXT:crio_blog/Resources/Private/Extensions/news/Layouts/
            twb {
                templateRootPath = EXT:crio_blog/Resources/Private/Extensions/news/Templates/Styles/Twb/Templates/
                partialRootPath = EXT:crio_blog/Resources/Private/Extensions/news/Templates/Styles/Twb/Partials/
                layoutRootPath = EXT:crio_blog/Resources/Private/Extensions/news/Templates/Styles/Twb/Layouts/
            }
        }
    }
}
